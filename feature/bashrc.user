alias medit="mousepad"
alias code="codium"
alias paint="gnome-paint"
alias icon-picker="gtk3-icon-browser"
#alias color-picker-gtk=""
alias disk="dysk --color yes --cols id+label+mount+type+size+disk+used+use+free_percent+free+uuid --units binary --sort mp"
alias astroterm="/home/walpy/app/system/astroterm/astroterm-linux-x86_64"
alias night_sky="/home/walpy/app/system/astroterm/astroterm-linux-x86_64 --unicode --color --city=Kaluga --datetime $(date +%Y-%m-%dT%R:%S) --label-thresh 2 --metadata"
