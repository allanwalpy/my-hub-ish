# user configuration & tweaks

# $PATH addinitions; nodejs;
export PATH="$HOME/.local/bin/:$PATH"

# sys utils configurations
export GPG_TTY=$(tty)
export VCPKG_ROOT=$HOME/app/system/vcpkg
export GTK_THEME=Arc-Darker-solid-git

# theme'ing
export QT_QPA_PLATFORMTHEME=qt5ct
#export GTK_THEME=Arc-Darker-solid-git

# alias://default_args
alias l='ls -hal'
alias grep='grep --color'
alias codeblocks="GTK_THEME=Arc-Dark-solid-git codeblocks"

# alais://default_actions
alias gamma='xgamma -gamma'
alias markdown='glow --pager'
alias icon-picker='gtk4-icon-browser'
#alias color-picker-gtk=''

# alais://archaism
alias neofetch='fastfetch'

# alais://mnemonic_apps
alias medit=mousepad
alias code='codium'
alias paint='gnome-paint'
alias vpn="hiddify"
