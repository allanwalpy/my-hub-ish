# user configuration & tweaks

cc='\[\e[00m\]'        # clear color
cu='\[\e[01;32m\]'     # user color
ch='\[\e[01;34m\]'     # host color
cw='\[\e[01;35m\]'     # working directory color
ce='\[\e[00;37m\]'     # executable(?) color

# original "\[\e]0;\u@\h: \w\a\]${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ "
PS1='['$cu'\u\[\e[00;37m\]@'$ch'\h'$cc':'$cw'\w'$cc'] $(code=${?##0};echo ${code:+"\[\e[1;31m${code} "})'$ce'\$ '$cc
PS2='> '


gtk_theme=$(xfconf-query --channel xsettings --property "/Net/ThemeName")

# $PATH addinitions; nodejs;
export PATH="$HOME/.local/bin/:$PATH"

# sys utils configurations
export GPG_TTY=$(tty)
export VCPKG_ROOT=$HOME/app/system/vcpkg

# theme'ing
# export QT_QPA_PLATFORMTHEME=qt6ct
export GTK_THEME="$gtk_theme"

# alias://default_args
alias cp="cp --verbose"
alias mv="mv --verbose"
alias rm="rm --verbose"
alias l="ls -hal"
alias grep="grep --color"
alias codeblocks="GTK_THEME="$gtk_theme" codeblocks"
alias unrar="unrar x"
alias flatseal="flatpak run com.github.tchx84.Flatseal"
alias auth="~/app/system/authy"
alias rss="liferea"
alias feed="liferea"
alias focus="~/app/system/focus/app"
alias nom="~/app/system/nom"
alias nom_update="~/app/system/nom refresh"
alias medit="GTK_THEME=Arc-Dark-solid-git mousepad"

# alais://default_actions
alias x="exit"
alias _="clear"
alias .="cd"
alias ..="cd .."
alias update="/home/walpy/hub/system/update"
alias gamma="xgamma -gamma"
alias markdown="glow --pager"
alias vpn_on="systemctl --user start vpn.mine"
alias vpn_off="systemctl --user stop vpn.mine"
alias disk-blame="/home/walpy/hub/feature/disk-blame"

# alais://archaism
alias neofetch="fastfetch"

# alais://mnemonic_apps
alias sys_feed="journalctl -f -l"
