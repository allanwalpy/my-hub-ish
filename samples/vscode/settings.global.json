{
    "breadcrumbs.enabled": true,

    "csharp.format.enable": true,
    "csharp.suppressDotnetInstallWarning": false,
    "csharp.suppressHiddenDiagnostics": false,
    "csharp.unitTestDebuggingOptions": {},

    "debug.inlineValues": true,
    "debug.internalConsoleOptions": "neverOpen",
    "debug.openDebug": "neverOpen",
    "debug.openExplorerOnEnd": true,
    "debug.showInStatusBar": "always",
    "debug.showSubSessionsInToolBar": true,
    "debug.toolBarLocation": "floating",

    "diffEditor.ignoreTrimWhitespace": false,

    "dotnet-test-explorer.addProblems": true,
    "dotnet-test-explorer.autoExpandTree": false,
    "dotnet-test-explorer.autoWatch": false,
    "dotnet-test-explorer.codeLensFailed": "❌",
    "dotnet-test-explorer.codeLensPassed": "✔",
    "dotnet-test-explorer.codeLensSkipped": "❔",
    "dotnet-test-explorer.enableTelemetry": false,
    "dotnet-test-explorer.leftClickAction": "gotoTest",
    "dotnet-test-explorer.showCodeLens": true,
    "dotnet-test-explorer.useTreeView": true,
    "dotnet-test-explorer.runInParallel": true,

    "editor.acceptSuggestionOnEnter": "off",
    "editor.accessibilitySupport": "off",
    "editor.bracketPairColorization.enabled": true,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.cursorStyle": "block",
    "editor.detectIndentation": false,
    "editor.emptySelectionClipboard": false,
    "editor.fontFamily": "Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.formatOnType": true,
    "editor.guides.bracketPairs": "active",
    "editor.hover.delay": 250,
    "editor.inlineSuggest.enabled": true,
    "editor.insertSpaces": true,
    "editor.lineNumbers": "on",
    "editor.maxTokenizationLineLength": 10240,
    "editor.minimap.enabled": false,
    "editor.minimap.maxColumn": 100,
    "editor.minimap.showSlider": "always",
    "editor.mouseWheelScrollSensitivity": 1,
    "editor.mouseWheelZoom": true,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "editor.quickSuggestionsDelay": 100,
    "editor.rulers": [ 120, 150 ],
    "editor.scrollBeyondLastColumn": 25,
    "editor.scrollBeyondLastLine": true,
    "editor.snippetSuggestions": "bottom",
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "editor.suggest.localityBonus": true,
    "editor.suggest.shareSuggestSelections": true,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 150,
    "editor.wrappingIndent": "indent",
    "editor.tabSize": 4,

    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.incrementalNaming": "smart",

    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": false,

    "files.autoSave": "off",
    "files.insertFinalNewline": true,
    "files.maxMemoryForLargeFilesMB": 1024,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.watcherExclude": {
        "**/bin/**": true,
        "**/obj/**": true,
        "**/out/**": true
    },

    "git.autofetch": true,
    "git.branchSortOrder": "alphabetically",
    "git.confirmSync": false,
    "git.detectSubmodules": true,
    "git.enableCommitSigning": true,
    "git.enableSmartCommit": true,
    "git.fetchOnPull": true,
    "git.ignoreMissingGitWarning": false,
    "git.inputValidation": "always",
    "git.promptToSaveFilesBeforeCommit": "always",
    "git.scanRepositories": [ "c:\\git\\", "/home/___user/git/" ],
    "git.showPushSuccessNotification": true,

    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": false,
        "markdown": true
    },

    "gitlens.blame.highlight.locations": [ "gutter", "line", "overview" ],
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.defaultDateFormat": "HH:mm:ss://DD/MM/YYYY//Z",
    "gitlens.hovers.annotations.over": "annotation",
    "gitlens.hovers.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.menus": false,
    "gitlens.statusBar.command": "gitlens.toggleFileBlame",
    "gitlens.statusBar.reduceFlicker": true,

    "markdown.extension.list.indentationSize": "inherit",
    "markdown.extension.print.absoluteImgPath": false,
    "markdown.extension.preview.autoShowPreviewToSide": false,
    "markdown.extension.toc.downcaseLink": false,
    "markdownlint.config": {
        "MD003": {
            "style": "atx"
        },
        "MD004": {
            "style": "dash"
        },
        "MD013": {
            "line_length": 120,
            "code_blocks": true,
            "code_block_line_length": 120,
            "headers": true,
            "heading_line_length": 120,
            "tables": true
        },
        "MD028": true,
        "MD029": {
            "style": "ordered"
        },
        "MD035": {
            "style": "---"
        },
        "MD038": true,
        "MD046": {
            "style": "consistent"
        }
    },
    "markdownlint.run": "onSave",

    "material-icon-theme.activeIconPack": "vue_vuex",
    "material-icon-theme.hidesExplorerArrows": false,
    "material-icon-theme.showReloadMessage": true,
    "material-icon-theme.showWelcomeMessage": false,
    "material-icon-theme.showUpdateMessage": false,

    "npm.runInTerminal": false,

    "omnisharp.enableEditorConfigSupport": true,
    "omnisharp.disableMSBuildDiagnosticWarning": true,
    "omnisharp.loggingLevel": "information",
    "omnisharp.maxProjectResults": 15,
    "omnisharp.projectLoadTimeout": 300,
    "omnisharp.waitForDebugger": false,

    "prettier.arrowParens": "avoid",
    "prettier.bracketSpacing": true,
    "prettier.printWidth": 140,
    "prettier.semi": true,
    "prettier.singleQuote": false,
    "prettier.tabWidth": 4,
    "prettier.trailingComma": "all",
    "prettier.useTabs": false,

    "razor.languageServer.debug": true,

    "redhat.telemetry.enabled": false,

    "scm.alwaysShowActions": true,

    "search.exclude": {
        "**/bin": true,
        "**/bower_components": true,
        "**/node_modules": true,
        "**/obj": true,
        "**/out": true
    },
    "search.smartCase": true,
    "search.showLineNumbers": true,
    "search.useGlobalIgnoreFiles": true,
    "search.useIgnoreFiles": true,

    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "telemetry.telemetryLevel": "off",

    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.drawBoldTextInBrightColors": false,
    "terminal.integrated.enableBell": true,
    "terminal.integrated.fontFamily": "monospace",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontWeightBold": "normal",
    "terminal.integrated.profiles.windows": {    },
    "terminal.integrated.rightClickBehavior": "copyPaste",

    "window.menuBarVisibility": "toggle",
    "window.title": "${rootName}://${activeEditorMedium}",

    "workbench.activityBar.visible": true,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editor.closeOnFileDelete": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.labelFormat": "medium",
    "workbench.editor.openPositioning": "left",
    "workbench.editor.tabCloseButton": "left",
    "workbench.editor.tabSizing": "shrink",
    "workbench.list.horizontalScrolling": true,
    "workbench.view.alwaysShowHeaderActions": true,

    "xmlTools.xmlFormatterImplementation": "v2",

    "zenMode.centerLayout": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideTabs": false,
    "zenMode.hideStatusBar": true,

    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one",
        "editor.rulers": [
            120
        ]
    }

}
